[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
blue = #83a5a8
green = #83a598
yellow = #fabd2f


[bar/main]
monitor = ${env:MONITOR}

font-0 = RobotoMono Nerd Font:size=14;1
font-1 = RobotoMono Nerd Font:size=14;1
font-2 = RobotoMono Nerd Font:size=14;1
font-3 = RobotoMono Nerd Font:size=14;1

width = 100%
height = 2.5%
offset-y = 0%
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
padding = 1
module-margin = 1

modules-left = date bspwm xwindow
modules-center =
modules-right = cpu

wm-restack = bspwm

[bar/desktop]
inherit = bar/main

font-0 = RobotoMono Nerd Font:size=18;1
font-1 = RobotoMono Nerd Font:size=18;1
font-2 = RobotoMono Nerd Font:size=18;1
font-3 = RobotoMono Nerd Font:size=18;1

modules-left = date bspwm xwindow
modules-right = cpu temp_desktop

tray-position = right
tray-padding = 2
tray-maxsize = 24

[bar/side]
inherit = bar/main
monitor = ${env:SIDE_MONITOR}

height = 2.0%

modules-left = date bspwm xwindowside
modules-right = cpu

[bar/laptop]
inherit = bar/main

monitor = ${env:MONITOR:eDP1:DP1}

height = 3.5%

font-0 = RobotoMono Nerd Font:size=15;1
font-1 = RobotoMono Nerd Font:size=15;1
font-2 = RobotoMono Nerd Font:size=15;1
font-3 = RobotoMono Nerd Font:size=15;1

modules-left = date bspwm xwindowlaptop
modules-right = battery cpu temp_laptop

tray-position = right
tray-padding = 2
tray-maxsize = 24

bottom = false

[module/xwindow]
type = internal/xwindow
label = %title:0:80:...%

[module/xwindowside]
inherit = module/xwindow
label = %title:0:30:...%

[module/xwindowlaptop]
inherit = module/xwindow
label = %title:0:40:...%

[module/bspwm]
# credit: https://github.com/jonhoo/configs
type = internal/bspwm
pin-workspaces = true
enable-click = false
enable-scroll = false

label-dimmed-focused = " %name% "
label-dimmed-focused-underline = ${colors.background}

label-focused = " %name% "
label-focused-underline = ${colors.blue}

label-occupied = " %name% "
label-occupied-foreground = ${colors.blue}

label-urgent = " %name% "
label-urgent-underline = ${colors.alert}

label-empty = " %name% "
label-empty-foreground = #555555

[module/temperature]
type = internal/temperature

warn-temperature = 60

thermal-zone = 0

format-underline = ${colors.green}
label-warn-underline = ${colors.alert}

[module/temp_laptop]
inherit = module/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input

[module/temp_desktop]
inherit = module/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon2/temp3_input

[module/date]
type = internal/date
interval = 5

date = "%a %d"
time = %H:%M

format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

format-charging = "<animation-charging>  <label-charging>"

format-discharging = "<ramp-capacity>  <label-discharging>"

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""
animation-charging-3 = ""
animation-charging-4 = ""
; Framerate in milliseconds
animation-charging-framerate = 750

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.yellow}
label = %percentage:2%%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
